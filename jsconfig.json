{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "allowJs": true,
    "checkJs": true,
    "maxNodeModuleJsDepth": 1,
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@types/*": ["./types/*"]
    }
  },
  "include": [
    "src/**/*",
    "types/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "client",
    "temp_backup",
    "backups",
    "**/*.test.js",
    "**/*.spec.js"
  ],
  "typeAcquisition": {
    "enable": true,
    "include": [
      "node",
      "fastify",
      "@supabase/supabase-js",
      "openai",
      "twilio"
    ]
  }
}
